{
  "name": "react-blades",
  "version": "0.0.1",
  "description": "Horizontal stacking window panels.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:css && npm run build:svg",
    "build:css": "node-sass css/styles.scss lib/css/_blades.css",
    "build:js": "babel src/ -d lib/ --ignore src/components",
    "build:svg": "webpack",
    "clean": "rimraf lib",
    "lint": "eslint --ext .js,.jsx src",
    "mocha": "mocha --compilers js:babel-register,jsx:babel-register --require airbnb-js-shims --recursive ./test/_helpers",
    "pretest": "npm run --silent lint",
    "tests-only": "npm run mocha --silent test",
    "tests-karma": "karma start",
    "test": "npm run tests-only && npm run tests-karma"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericberagg/react-blades.git"
  },
  "keywords": [
    "react",
    "react-blades",
    "blades",
    "blade"
  ],
  "author": "Eric Beragg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ericberagg/react-blades/issues"
  },
  "homepage": "https://github.com/ericberagg/react-blades#readme",
  "devDependencies": {
    "babel-plugin-syntax-jsx": "^6.13.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.9.0",
    "lerna": "2.0.0-beta.34"
  }
}
